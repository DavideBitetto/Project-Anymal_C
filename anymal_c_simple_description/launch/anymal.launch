<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="$(find test_gazebo)/test_worlds/test.world"/>
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
  </include>
  
  <param name="path" value="$(find anymal_c_simple_description)/urdf/model.urdf"/>
  
  <param name="robot_description" command="cat '$(find anymal_c_simple_description)/urdf/anymal.urdf'" />
    
  <node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
          args="-urdf -z 0.64 -param robot_description -model anymal" />
  
  <!-- Load joint controller configurations from YAML file to parameter server -->
  <rosparam file="$(find test_control)/config/test_control.yaml" command="load"/>

  <!-- load the controllers -->
  <node name="controller_spawner" pkg="controller_manager" type="spawner" respawn="false"
  	output="screen" ns="/test" args="floating_base_controller"/> 

  <!-- convert joint states to TF transforms for rviz, etc--> 
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"
	respawn="false" output="screen">
  <remap from="/joint_states" to="/anymal/joint_states" />
  </node> 
   
</launch>
